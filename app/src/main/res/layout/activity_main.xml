<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bluetoothButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/bluetoothName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="esto es una prueba"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:layout_below="@id/bluetoothButton"
        />
   <!-- <ImageView
        android:id="@+id/wifiButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/bluetoothButton"/>
    <TextView
        android:id="@+id/wifiName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Esto es una prueba"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/bluetoothButton"
        android:layout_below="@id/wifiButton"/> -->
    <ImageView
        android:id="@+id/settingsButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/bluetoothButton"/>
    <TextView
        android:id="@+id/settingsName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Esto es una prueba"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/bluetoothButton"
        android:layout_below="@id/settingsButton"/>
    <ImageView
        android:id="@+id/camera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/settingsButton"/>
    <TextView
        android:id="@+id/cameraName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Esto es una prueba"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/settingsButton"
        android:layout_below="@id/camera"/>
    <TextView
        android:id="@+id/tv_response"
        android:layout_marginTop="300dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Permisos"/>
    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:background="@color/Red"
        android:layout_marginBottom="10dp"
        android:text="Salir"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/scheduleJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/bluetoothName"
        android:text="Start"/>

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scheduleJob"
        android:text="Location"/>
</RelativeLayout>