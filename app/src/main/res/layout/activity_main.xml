<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <View
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/explorer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="45dp"
        />
    <TextView
        android:id="@+id/explorerName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColor="#000000"
        android:layout_below="@id/explorer"
        />
    <ImageView
        android:id="@+id/settingsButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/explorer"/>
    <TextView
        android:id="@+id/settingsName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/explorer"
        android:layout_below="@id/settingsButton"/>
    <ImageView
        android:id="@+id/admCensal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/settingsButton"/>
    <TextView
        android:id="@+id/admCensaltxt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/settingsButton"
        android:layout_below="@id/admCensal"/>
     <ImageView
        android:id="@+id/bluetoothButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/admCensal"/>
    <TextView
        android:id="@+id/bluetoothName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/admCensal"
        android:layout_below="@id/explorer"/>
    <TextView
        android:id="@+id/tv_response"
        android:layout_marginTop="300dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--  Barra   -->

    <ImageView
        android:id="@+id/settingsWifi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/settingsBluetooth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settingsWifi"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/settings3G"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settingsBluetooth"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/settingsLocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settings3G"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settingsLocation"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/sms"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/call"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/cameraSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sms"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/settingsAll"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cameraSettings"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/settingsAll"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/unlock"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/settingsAll"
        android:layout_marginTop="15dp"/>
</RelativeLayout>